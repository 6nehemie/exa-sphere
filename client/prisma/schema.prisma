generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  avatar      String
  firstName   String
  lastName    String
  fullName    String
  email       String       @unique
  description String
  phone       String
  phoneNumber PhoneNumber?
  address     Address?
}

model Address {
  id      Int    @id @default(autoincrement())
  title   String
  street  String
  city    String
  zip     String
  state   String
  country String
  User    User?  @relation(fields: [userId], references: [id])
  userId  Int?   @unique
}

model PhoneNumber {
  id          Int    @id @default(autoincrement())
  countryCode String
  number      String
  User        User?  @relation(fields: [userId], references: [id])
  userId      Int?   @unique
}
